  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "node server.js",
    "test:backend": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --config=jest.config.json",
    "test:backend:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --watch --config=jest.config.json",
    "test:backend:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --coverage --config=jest.config.json",
    "test:frontend": "vitest run",
    "test:frontend:watch": "vitest",
    "test:frontend:coverage": "vitest run --coverage",
    "test": "npm run test:frontend && npm run test:backend",
    "test:coverage": "npm run test:frontend:coverage && npm run test:backend:coverage"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "express": "^5.1.0",
    "mongoose": "^8.14.1",
